<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="#FAFAFA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Correction Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Incorrect Word -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Before"
                        android:textSize="10sp"
                        android:textColor="#999"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/incorrect_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="incorrect"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:background="@drawable/error_text_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Arrow -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="12dp">

                    <ImageView
                        android:id="@+id/arrow_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="#4CAF50"
                        android:background="@drawable/arrow_circle_background"
                        android:padding="6dp" />

                </LinearLayout>

                <!-- Correct Word -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="After"
                        android:textSize="10sp"
                        android:textColor="#999"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/correct_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="correct"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:background="@drawable/success_text_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Reason -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/reason_background"
                android:padding="8dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_info_small"
                    android:tint="#666"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/reason_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reason for correction"
                    android:textSize="12sp"
                    android:textColor="#555"
                    android:lineSpacingExtra="1dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>