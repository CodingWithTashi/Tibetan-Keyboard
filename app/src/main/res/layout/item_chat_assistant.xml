<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/imageViewAssistant"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/bot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewAssistantMessage" />

    <TextView
        android:id="@+id/textViewAssistantMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/bg_message_assistant"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewAssistant"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="12:31 PM"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textIsSelectable="true"
        app:layout_constraintStart_toEndOf="@+id/imageViewAssistant"
        app:layout_constraintTop_toBottomOf="@+id/textViewAssistantMessage" />

    <ImageView
        android:id="@+id/clipboardIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/baseline_content_copy_24"
    app:layout_constraintEnd_toEndOf="@+id/textViewAssistantMessage"
    app:layout_constraintBottom_toBottomOf="@+id/textViewAssistantMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>
